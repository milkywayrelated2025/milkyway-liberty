# Configuration de l'API Fusion Vidéo
# Copiez ce fichier en .env et modifiez les valeurs selon vos besoins

# Port du serveur
PORT=3000

# Clé API pour sécuriser les endpoints
API_KEY=supersecretkey

# Chemin vers FFmpeg (optionnel, détecté automatiquement)
FFMPEG_PATH=/usr/local/bin/ffmpeg

# Limite de taille des fichiers uploadés (en bytes)
MAX_FILE_SIZE=104857600

# Timeout pour les opérations FFmpeg (en millisecondes)
FFMPEG_TIMEOUT=300000

# Nettoyage automatique (TTL en millisecondes)
CLEANUP_TTL=7200000 